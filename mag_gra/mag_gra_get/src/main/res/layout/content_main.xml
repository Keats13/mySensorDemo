<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.zj.app_save.MainActivity" tools:showIn="@layout/activity_main"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/magnetic"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="显示"
        android:gravity="center"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp" />

    <Button
        android:id="@+id/Button_Write"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="写入文件"
        android:layout_marginStart="56dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/Button_Stop"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="56dp" />

    <Button
        android:id="@+id/Button_Stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="停止写入"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/clear_count"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="48dp"
        app:layout_constraintLeft_toLeftOf="@+id/clear_count" />

    <TextView
        android:id="@+id/count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="计数个数"
        app:layout_constraintRight_toLeftOf="@+id/count_num"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="24dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/count_num"
        tools:layout_constraintBaseline_creator="1"
        android:layout_marginRight="24dp" />

    <TextView
        android:id="@+id/count_num"
        android:layout_width="26dp"
        android:layout_height="20dp"
        android:text="0"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        android:layout_marginStart="140dp"
        app:layout_constraintBottom_toBottomOf="@+id/clear_count"
        android:layout_marginEnd="140dp"
        app:layout_constraintRight_toRightOf="@+id/clear_count"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/clear_count"
        android:layout_marginLeft="140dp"
        android:layout_marginRight="140dp" />

    <Button
        android:id="@+id/clear_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="清零计数器"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="78dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="90dp"
        android:layout_marginRight="78dp" />

    <EditText
        android:id="@+id/file_name_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="请输入储存文件名"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/file_name"
        tools:layout_constraintBaseline_creator="1"
        android:layout_marginRight="30dp" />

    <TextView
        android:id="@+id/file_name"
        android:layout_width="0dp"
        android:layout_height="19dp"
        android:text="文件名"
        app:layout_constraintRight_toLeftOf="@+id/file_name_edit"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/Button_Write"
        android:layout_marginEnd="33dp"
        android:layout_marginTop="121dp"
        app:layout_constraintTop_toBottomOf="@+id/fangxiang"
        android:layout_marginBottom="121dp"
        android:layout_marginRight="33dp" />

    <TextView
        android:id="@+id/magneticRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="刷新频率"
        android:layout_marginStart="56dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/magneticRate_edit"
        tools:layout_constraintBaseline_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/gra"
        android:layout_marginLeft="56dp" />

    <TextView
        android:id="@+id/magneticRate_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="19dp"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/gra"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/magneticRate"
        android:layout_marginLeft="19dp" />

    <TextView
        android:id="@+id/fangxiang"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="方向 "
        android:gravity="center"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@+id/magnetic"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp" />

    <TextView
        android:id="@+id/gra"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="重力"
        android:gravity="center"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/fangxiang"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/fangxiang"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/fangxiang" />

</android.support.constraint.ConstraintLayout>
